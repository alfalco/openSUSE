# Add repository
sudo zypper ar -f http://download.videolan.org/pub/vlc/SuSE/Tumbleweed/ VLC

# Sync repository
sudo zypper ref VLC

# Dist-Upgrade from VLC
sudo zypper dup --from VLC --allow-vendor-change

