# Download rpm from https://plex.tv
wget -c https://downloads.plex.tv/plex-media-server/1.7.1.3856-757424396/plexmediaserver-1.7.1.3856-757424396.x86_64.rpm

# Prepare system to installation
sudo ln -s /etc/SUSE-brand /etc/SuSE-release

# Import key and install packages
sudo rpm --import https://downloads.plex.tv/plex-keys/PlexSign.key
sudo zypper in insserv-compat
sudo zypper in ./plexmediaserver-1.7.1.3856-757424396.x86_64.rpm

# Adjust user group, permissions and locale before start plexmediaserver.service
useradd -G plex plex
sudo chown -R plex:plex /var/lib/plexmediaserver
sudo localectl set-locale LANG=en_US.UTF-8
