sudo zypper ar -f http://download.opensuse.org/repositories/KDE:/Frameworks5/openSUSE_Leap_15.0/ KF5 
 
sudo zypper ar -f http://download.opensuse.org/repositories/KDE:/Qt5/openSUSE_Leap_15.0/ Qt5

# And dist-upgrade

sudo zypper dup
